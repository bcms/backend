{
  "name": "@becomes/cms-backend",
  "version": "3.0.0",
  "description": "Backend for the BCMS",
  "author": "becomes.co",
  "license": "MIT",
  "main": "src/main.js",
  "scripts": {
    "start": "node dist/src/main.js",
    "start:local": "node bin/bcms-backend.js --dev",
    "dev": "nodemon -L -r tsconfig-paths/register src/main.ts",
    "build:ts": "tsc --project tsconfig.json",
    "build": "node tools.js --build",
    "bundle": "node tools.js --bundle",
    "bundle:local": "node tools.js --local-dev-bundle",
    "link": "node tools.js --link",
    "unlink": "node tools.js --unlink",
    "publish": "node tools.js --publish",
    "pack": "node tools.js --pack",
    "pack:local": "node tools.js --local-dev-pack",
    "create:image": "node tools.js --create-image",
    "generate-doc": "typedoc",
    "lint": "eslint . --ext .ts",
    "build:plugins": "tsc -p tsconfig.plugins.json"
  },
  "dependencies": {
    "@becomes/purple-cheetah": "^3.1.6",
    "@becomes/purple-cheetah-mod-fsdb": "^1.1.1",
    "@becomes/purple-cheetah-mod-graphql": "^1.1.0",
    "@becomes/purple-cheetah-mod-jwt": "^1.1.0",
    "@becomes/purple-cheetah-mod-mem-cache": "^1.1.1",
    "@becomes/purple-cheetah-mod-mongodb": "^1.1.3",
    "@becomes/purple-cheetah-mod-socket": "^1.1.0",
    "@types/multer": "^1.4.5",
    "bcrypt": "^5.0.1",
    "cron": "^1.8.2",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "image-size": "^1.0.0",
    "mongoose": "^6.0.8",
    "multer": "^1.4.2",
    "sharp": "^0.26.3",
    "uuid": "^8.3.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@becomes/cms-sdk": "file:packs/bcms-sdk.tgz",
    "@becomes/cms-ui": "file:packs/bcms-ui.tgz",
    "@types/bcrypt": "^3.0.1",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.17.9",
    "@types/fs-extra": "^8.1.0",
    "@types/node": "^15.6.2",
    "@types/sharp": "^0.26.1",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@types/yamljs": "^0.2.30",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.0.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.4.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/becomesco/cms-backend.git"
  },
  "bugs": {
    "url": "https://github.com/becomesco/cms-backend/issues"
  },
  "homepage": "https://github.com/becomesco/cms-backend#readme",
  "nodemonConfig": {
    "watch": [
      "src",
      "plugins",
      "functions",
      "events",
      "jobs"
    ],
    "ext": "ts"
  },
  "_moduleAliases": {
    "@becomes/cms-backend": "src"
  }
}
