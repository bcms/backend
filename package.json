  },
  "dependencies": {
    "@becomes/purple-cheetah": "^2.0.10",
    "bcrypt": "^3.0.8",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "mongoose": "^5.9.24",
    "multer": "^1.4.2",
    "swagger-ui-express": "^4.1.4",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.7",
    "@types/fs-extra": "^8.1.0",
    "@types/mongoose": "5.5.31",
    "@types/multer": "^1.4.2",
    "@types/node": "^12.12.50",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yamljs": "^0.2.30",
    "env-cmd": "^10.1.0",
    "listr": "^0.14.3",
    "nodemon": "^2.0.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
