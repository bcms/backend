{
  "name": "@becomes/cms-backend",
  "version": "2.0.45",
  "description": "Backend for the BCMS",
  "author": "becomes.co",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "node dist/bin/bcms-backend.js",
    "start:local": "node bin/bcms-backend.js --dev",
    "dev": "nodemon src/main.ts",
    "build:ts": "npm run lint && tsc -p .",
    "build": "node tools.js --build",
    "bundle": "node tools.js --bundle",
    "link": "node tools.js --link",
    "link:sudo": "node tools.js --link --sudo",
    "unlink": "node tools.js --unlink",
    "unlink:sudo": "node tools.js --unlink --sudo",
    "publish": "node tools.js --publish",
    "pack": "node tools.js --pack",
    "generate-doc": "typedoc",
    "lint": "eslint . --ext .ts",
    "build:plugins": "tsc -p tsconfig.plugins.json"
  },
  "peerDependencies": {
    "@becomes/purple-cheetah": "^3.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cron": "^1.8.2",
    "express": "^4.17.1",
    "mongoose": "^5.12.12",
    "multer": "^1.4.2",
    "sharp": "^0.26.3",
    "swagger-ui-express": "^4.1.6",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@becomes/purple-cheetah": "file:purple-cheetah.tgz",
    "@types/bcrypt": "^5.0.0",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.17.12",
    "@types/mongoose": "^5.11.39",
    "@types/node": "^15.6.2",
    "@types/sharp": "^0.26.1",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yamljs": "^0.2.30",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.24.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.17.8",
    "typedoc-neo-theme": "^1.0.10",
    "typescript": "^4.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/becomesco/cms-backend.git"
  },
  "bin": {
    "bcms-backend": "bin/bcms-backend.js"
  },
  "keywords": [
    "bcms-backend"
  ],
  "bugs": {
    "url": "https://github.com/becomesco/cms-backend/issues"
  },
  "homepage": "https://github.com/becomesco/cms-backend#readme",
  "nodemonConfig": {
    "watch": [
      "src",
      "plugins"
    ],
    "ext": "ts"
  }
}
