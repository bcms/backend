{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "ES2020",
    "outDir": "./dist",
    "incremental": true,
    "importsNotUsedAsValues": "error"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/node_modules"],
  "typedocOptions": {
    "entryPoints": ["src"],
    "name": "BCMS | Backend",
    "theme": "./node_modules/typedoc-neo-theme/bin/default",
    "plugin": "typedoc-neo-theme",
    "mode": "file",
    "out": "doc"
  }
}
